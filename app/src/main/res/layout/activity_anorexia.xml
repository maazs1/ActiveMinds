<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Anorexia"
    android:background="#ffc40d"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/backButton1"
            android:background="#ffc40d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_keyboard_backspace_green" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#1e7145"
            android:gravity="center"
            android:text="ANOREXIA NERVOSA"
            android:textSize="33sp"
            android:fontFamily="@font/alef"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/alef"
                android:gravity="center"
                android:text="People with anorexia generally view themselves as overweight, even if they’re dangerously underweight. They tend to constantly monitor their weight, avoid eating certain types of foods, and severely restrict their calories"
                android:textColor="#FFF"
                android:textSize="23sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:textSize="8sp"
            android:layout_height="wrap_content"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:textColor="#FFF"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Common symptoms of anorexia nervosa include:"
                android:textSize="23sp"
                android:fontFamily="@font/alef"
                />

            <TextView
                android:textColor="#FFF"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Being considerably underweight compared with people of similar age and height"
                android:textSize="23sp"
                android:fontFamily="@font/alef"
                />
            <TextView
                android:textColor="#FFF"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Very restricted eating patterns"
                android:textSize="23sp"
                android:fontFamily="@font/alef"
                />
            <TextView
                android:gravity="center"
                android:textColor="#FFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• An intense fear of gaining weight or persistent behaviors to avoid gaining weight, despite being underweight"
                android:textSize="23sp"
                android:fontFamily="@font/alef"
                />
            <TextView
                android:gravity="center"
                android:textColor="#FFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• A relentless pursuit of thinness and unwillingness to maintain a healthy weight"
                android:textSize="23sp"
                android:fontFamily="@font/alef"
                />
            <TextView
                android:gravity="center"
                android:textColor="#FFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• A heavy influence of body weight or perceived body shape on self-esteem"
                android:textSize="23sp"
                android:fontFamily="@font/alef"
                />
            <TextView
                android:gravity="center"
                android:textColor="#FFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• A distorted body image, including denial of being seriously underweight"
                android:textSize="23sp"
                android:fontFamily="@font/alef"
                />


        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:textSize="8sp"
            android:layout_height="wrap_content"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center|bottom">

            <Button
                android:id="@+id/findHelp"
                android:text="Find Help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_green2"
                android:textColor="#FFF"
                android:padding="10dp"
                android:fontFamily="@font/alef">
            </Button>
        </LinearLayout>
    </LinearLayout>



</ScrollView>