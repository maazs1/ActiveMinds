<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1e7145"
    android:orientation="vertical"
    tools:context=".DepressionPage">

        <ImageButton
            android:id="@+id/backButton1"
            android:background="#1e7145"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_keyboard_backspace_yellow" />


    <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffc40d"
        android:text="Click to learn more"
        android:textSize="25sp"
        android:fontFamily="@font/alef"
        />
    <ImageView
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/emotionEmoticon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal">
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/majorDepression"
            android:text="Major Depression"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_yellow"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            android:padding="10dp"
            android:fontFamily="@font/alef">
        </Button>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="8dp" />
        <Button
            android:id="@+id/SAD"
            android:layout_gravity="center_horizontal"
            android:text="Seasonal Affective Disorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_yellow"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            android:padding="10dp"
            android:fontFamily="@font/alef">
        </Button>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="8dp" />
        <Button
            android:id="@+id/mania"
            android:layout_gravity="center_horizontal"
            android:text="Bipolar Disorder (Manic Depression)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_yellow"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:padding="10dp"
            android:fontFamily="@font/alef">
        </Button>

    </LinearLayout>


</LinearLayout>


